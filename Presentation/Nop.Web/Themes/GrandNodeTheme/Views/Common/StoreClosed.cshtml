@{
    Layout = "~/Views/Shared/_ColumnsOne.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.StoreClosed").Text);
    //page class
    Html.AppendPageCssClassParts("html-store-closed-page");

    var settings = Nop.Core.Infrastructure.EngineContext.Current.Resolve<Nop4you.Plugin.Widgets.ThemeGrandNode.ThemeGrandNodeSettings>();
}

@if (settings.useStoreClosed && settings.ownBackgroundPicture)
{
    <div class="page store-closed-page ownBackgroundPicture">
        <img src="@settings.backgroundUrl2" alt="">
        <div class="page-title">
            <h1>@T("StoreClosed")</h1>
        </div>
        <div class="page-body">
            @T("StoreClosed.Hint")
        </div>
    </div>
}

